{
  "name": "@instantish/blokus",
  "version": "1.0.0",
  "description": "Quickly create blocks and components for the slack block API with JavaScript.",
  "main": "dist/index.js",
  "module": "dist/blokus.esm.js",
  "browser": "dist/blokus.esm.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production tsdx build",
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx}'",
    "prepublishOnly": "npm run build",
    "test": "tsdx test",
    "test:coverage": "tsdx test --coverage",
    "clean": "git clean -fdX .",
    "generate-docs": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts"
  },
  "keywords": [
    "slack blocks",
    "javascript",
    "typescript"
  ],
  "author": "Guillaume St-Pierre",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/instantish/blokus.git"
  },
  "bugs": {
    "url": "https://github.com/instantish/blokus/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "jest": "^26.5.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "tsdx": "^0.14.1",
    "typedoc": "^0.20.19",
    "typedoc-plugin-markdown": "^3.4.5",
    "typescript": "^4.1.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
